{
  "manifest_version": 2,
  "name": "Blackboard Download Button",
  "version": "0.1.0",
  "description": "Adds a download button to Blackboard LMS.",
  "author": "Nathan Pennie <kb1rd@kb1rd.net> [@kb1rd:kb1rd.net]",
  "browser_specific_settings": {
    "gecko": {
      "id": "bbdl@kb1rd.net"
    }
  },
  "icons": {
    "16": "icon/16.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": []
}
